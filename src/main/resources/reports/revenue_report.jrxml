<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="revenue_report" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20">

    <parameter name="departureId" class="java.lang.Long"/>
    <parameter name="lineInfo" class="java.lang.String"/>
    <parameter name="departureDate" class="java.lang.String"/>
    <parameter name="departureTime" class="java.lang.String"/>
    <parameter name="totalRevenue" class="java.math.BigDecimal"/>

    <field name="ticketCode" class="java.lang.String"/>
    <field name="username" class="java.lang.String"/>
    <field name="seatCount" class="java.lang.Integer"/>
    <field name="priceAtPurchase" class="java.math.BigDecimal"/>
    <field name="purchaseDate" class="java.lang.String"/>

    <title>
        <band height="120">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[Izveštaj o prihodima]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="40" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA["Linija: " + $P{lineInfo}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="60" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA["Datum polaska: " + $P{departureDate} + " u " + $P{departureTime}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="90" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Ukupan prihod: " + $P{totalRevenue} + " RSD"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement x="0" y="0" width="80" height="30"/>
                <box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Šifra karte]]></text>
            </staticText>
            <staticText>
                <reportElement x="80" y="0" width="120" height="30"/>
                <box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Korisnik]]></text>
            </staticText>
            <staticText>
                <reportElement x="200" y="0" width="80" height="30"/>
                <box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Broj sedišta]]></text>
            </staticText>
            <staticText>
                <reportElement x="280" y="0" width="100" height="30"/>
                <box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Cena]]></text>
            </staticText>
            <staticText>
                <reportElement x="380" y="0" width="175" height="30"/>
                <box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Datum kupovine]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25">
            <textField>
                <reportElement x="0" y="0" width="80" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{ticketCode}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="80" y="0" width="120" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{username}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="200" y="0" width="80" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{seatCount}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="280" y="0" width="100" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{priceAtPurchase}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="380" y="0" width="175" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{purchaseDate}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <summary>
        <band height="50">
            <staticText>
                <reportElement x="0" y="20" width="400" height="20"/>
                <textElement textAlignment="Right">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[UKUPNO:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="400" y="20" width="155" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{totalRevenue} + " RSD"]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>